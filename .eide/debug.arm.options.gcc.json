{
    "version": 5,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "$float-abi-type": "hard",
        "output-debug-info": "enable",
        "misc-control": "-pipe -specs=nano.specs"
    },
    "c/cpp-compiler": {
        "language-c": "c11",
        "language-cpp": "c++17",
        "optimization": "level-0",
        "warnings": "all-warnings",
        "one-elf-section-per-function": true,
        "one-elf-section-per-data": true,
        "CXX_FLAGS": "-fno-rtti -fno-exceptions"
    },
    "asm-compiler": {},
    "linker": {
        "output-format": "elf",
        "remove-unused-input-sections": true,
        "LIB_FLAGS": "-lm -lstdc++",
        "LD_FLAGS": "-u _scanf_float -u _printf_float"
    }
}